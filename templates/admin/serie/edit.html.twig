{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_serie_edit' %}

{% block main %}
    <h1>{{ 'Création série'|trans({'%id%': serie.id}) }}</h1>

    {{ include('admin/serie/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_serie_show', {id: serie.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_serie'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/serie/_delete_form.html.twig', {serie: serie}, with_context = false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
